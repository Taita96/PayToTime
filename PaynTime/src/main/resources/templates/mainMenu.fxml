<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="600" prefWidth="800" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gm.PaynTime.controlador.menu.MainMenuController">

	<!-- Barra lateral -->
	<left>
		<VBox spacing="15" style="-fx-background-color: #2a8a85; -fx-padding: 20;" BorderPane.alignment="CENTER">
			<Button fx:id="btnIngresarGasto" onAction="#OnRegistrarMovimientos" prefHeight="40" prefWidth="180" style="-fx-background-color: #111; -fx-text-fill: white;" text="➕ Registrar movimiento" />
			<Button fx:id="btnHorasExtras" prefHeight="40" prefWidth="180" style="-fx-background-color: #111; -fx-text-fill: white;" text="⏱️ Horas Extras" />
			<Button fx:id="btnCerrarSesion" onAction="#onCerrarSesion" prefHeight="40" prefWidth="180" style="-fx-background-color: #d9534f; -fx-text-fill: white;" text="🚪 Cerrar Sesión" />
		</VBox>
	</left>

	<!-- Panel central -->
	<center>
		<VBox alignment="TOP_CENTER" spacing="20" BorderPane.alignment="CENTER">
			<padding>
				<Insets bottom="20" left="20" right="20" top="20" />
			</padding>
			<Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Panel Principal" />

			<!-- Saldo disponible -->
			<HBox alignment="CENTER" spacing="10">
				<Label style="-fx-font-size: 18px;" text="Saldo Disponible:" />
				<Label fx:id="lblSaldoDisponible" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: green;" text="0 €" />
			</HBox>

			<!-- Últimos gastos -->
			<VBox prefHeight="400" prefWidth="500" spacing="10">
				<Label style="-fx-font-size: 18px; -fx-underline: true;" text="Últimos gastos" />
				<TableView fx:id="tablaGastos" prefHeight="366.0" prefWidth="540.0">
					<columns>
					    <TableColumn fx:id="colId" minWidth="20.0" prefWidth="40.0" style="-fx-alignment: CENTER;" text="ID" />
						<TableColumn fx:id="colFecha" style="-fx-alignment: CENTER;" text="Fecha" />
						<TableColumn fx:id="colTipo" minWidth="20.0" prefWidth="60.0" style="-fx-alignment: CENTER;" text="Tipo" />
						<TableColumn fx:id="colMonto" style="-fx-alignment: CENTER;" text="Monto (€)" />
						<TableColumn fx:id="colDescripcion" prefWidth="135.0" style="-fx-alignment: CENTER;" text="Descripción" />					
						<TableColumn fx:id="colFoto" prefWidth="65.0" style="-fx-alignment: CENTER;" text="Imagen" />
					</columns>
					
				<!-- hago que las las columnas de la tableView se ajusten sin columna fantasma -->
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
				</TableView>
			</VBox>
		</VBox>
	</center>

</BorderPane>
